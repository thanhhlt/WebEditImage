<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | PerfectPix</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <script type="importmap"></script>

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Saira:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.min.css" asp-append-version="true" />

    @await RenderSectionAsync("PageStyles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="logo">
                    <p>PerfectPix</p>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-links navbar-nav">
                        <li class="nav-item"><a class="nav-link @(ViewBag.NavLink == "Index" ? "active" : "")"
                                asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewBag.NavLink == "Generation" ? "active" : "")"
                                href="#">Sinh ảnh</a></li>
                        <li class="nav-item">
                            <div class="tools dropdown">
                                <a class="nav-link @(ViewBag.NavLink == "Tools" ? "active" : "") dropdown-toggle"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">Công cụ </a>
                                <ul class="dropdown-menu p-3">
                                    <div class="row">
                                        <div class="col-6">
                                            <li><a class="dropdown-item" href="#">Tăng Độ Phân Giải</a></li>
                                            <li><a class="dropdown-item" href="#">Khôi phục ảnh mờ</a></li>
                                            <li><a class="dropdown-item" href="#">Loại bỏ chi tiết</a></li>
                                        </div>
                                        <div class="col-6">
                                            <li><a class="dropdown-item" href="#">Xoá phông</a></li>
                                            <li><a class="dropdown-item" href="#">Tăng cường màu sắc</a></li>
                                            <li><a class="dropdown-item" href="#">Khử nhiễu</a></li>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <div class="account-nav ms-auto">
                        <partial name="_AccountNavPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="main-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            <div class="footer-left">
                <p>&copy; 2025 PerfectPix - All Rights Reserved.</p>
            </div>
            <div class="footer-middle">
                <ul>
                    <li><a href="~/">Trang chủ</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="TermsOfUse">Điều khoản sử dụng</a></li>
                </ul>
            </div>
            <div class="footer-right">
                <ul class="social-links">
                    <li><a href="#" class="social-icon">Gmail</a></li>
                    <li><a href="#" class="social-icon">Facebook</a></li>
                    <li><a href="#" class="social-icon">Instagram</a></li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
